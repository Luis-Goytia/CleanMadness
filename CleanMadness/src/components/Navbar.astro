.navbar {
  background-color: transparent;
  border: none;
  position: fixed;
  height: 60px;
  width: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  column-gap: 1rem;
  margin-top: 60px;
  padding: 0 200px;
}

.logo {
  margin-left: 15px;
  width: 136px;
  height: auto;
}

.options {
  padding: 10px;
  display: flex;
}
.option {
  margin: 0 15px;
  border-radius: 20px;
  box-sizing: border-box;
  border: 3px solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 145px;
  height: 42px;
}

.option a {
  font-family: "Nunito", sans-serif;
  font-size: 16px;
  color: white;
  text-decoration: none;
}
