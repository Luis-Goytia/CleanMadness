---
import logo from "../assets/LogotipoCOLOR-V2 1.png";
---

<header>
  <nav>
    <div class="navbar">
      <div>
        <img src={logo} alt="Logo" class="logo" />
      </div>
      <div class="options">
        <div class="option"><a href="#game">El Juego</a></div>
        <div class="option"><a href="#why">El Por qu√©</a></div>
        <div class="option"><a href="#support">Nos Apoyan</a></div>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    position: fixed;
    z-index: 10;
  }

  .navbar {
    background-color: transparent;
    border: none;
    position: fixed;
    height: 60px;
    width: 80%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    column-gap: 1rem;
    margin-top: 60px;
    padding: 0 200px;
  }

  .logo {
    width: 136px;
    height: auto;
  }

  .options {
    display: flex;
  }
  .option {
    margin: 0 15px;
    border-radius: 20px;
    box-sizing: border-box;
    border: 3px solid white;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 145px;
    height: 42px;
  }

  .option a {
    font-family: "Nunito", sans-serif;
    font-size: 16px;
    color: white;
    text-decoration: none;
  }

  @media screen and (max-width: 840px) {
    .logo{
        display: none;
    }

    .navbar{
    height:30px;
    width: 20%;
    position: fixed;
    display: flex;
    justify-content: space-between;
    align-items: center;
    column-gap: 0rem;
    margin-top: 40px;
    padding: 0 0px;
    }
    
    .option{
    width: 100px;
    height: 42px;
    }

    .option a {
    font-family: "Nunito", sans-serif;
    font-size: 14px;
    color: white;
    text-decoration: none;
  }
}
</style>
