  .portada {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: repeat(3, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
    margin-top: 200px;
  }

  .logoColor {
    grid-area: 1 / 1 / 2 / 2;
  }
  .logoColor img {
    margin-top: -100px;
    display: flex;
    height: auto;
  }
  .text,
  .text2 {
    grid-area: 2 / 1 / 3 / 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .text p {
    font-family: "Nunito", sans-serif;
    font-size: 22px;
    color: white;
  }

  .line {
    position: absolute;
    width: 100px;
    height: 0px;
