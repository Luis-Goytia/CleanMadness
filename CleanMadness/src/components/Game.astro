<style>
  .container {
    display: flex;
    flex-direction: column;
  }
  /* --------------Portada-------------- */
  .game {
    background-image: url(../assets/BG.jpg);
    background-size: cover;
    background-position: center;
    height: 1080px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .portada {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: repeat(3, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
    margin-top: 200px;
  }

  .logoColor {
    grid-area: 1 / 1 / 2 / 2;
  }
  .logoColor img {
    margin-top: -100px;
    display: flex;
    height: auto;
  }
  .text {
    grid-area: 2 / 1 / 3 / 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .text p {
    font-family: "Nunito", sans-serif;
    font-size: 22px;
    color: white;
  }

  .line {
    position: absolute;
    width: 100px;
    height: 0px;
    border: 2px solid #ffffff;
    margin-top: 50px;
  }
  .download {
    grid-area: 3 / 1 / 4 / 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .download img {
    width: 153px;
    margin-top: -230px;
  }

